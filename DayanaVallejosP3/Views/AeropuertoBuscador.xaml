<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DayanaVallejosP3.ViewModels"
             x:Class="DayanaVallejosP3.Views.AeropuertoBuscador"
             Title="Tu Nombre y Apellido">

    <ContentPage.BindingContext>
        <vm:AirportSearchViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Entry x:Name="ColocarPais" 
               Text="{Binding Country}" 
               Placeholder="Ingrese el nombre del paÃ­s" />
        <Button Text="Buscar" 
                Command="{Binding SearchCommand}" />
        <Button Text="Limpiar" 
                Command="{Binding ClearCommand}" />
        <Label Text="{Binding Message}" 
               TextColor="Red" 
               IsVisible="{Binding IsError}" />
    </StackLayout>
</ContentPage>

