<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DayanaVallejosP3.ViewModels"
             x:Class="DayanaVallejosP3.ViewsModels.BusquedaViewModel"
             Title="Dayana Vallejos">
    <ContentPage.BindingContext>
        <vm:AirportSearchViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Buscar paÃ­s" Text="{Binding SearchQuery}" />
        <Button Text="Buscar" Command="{Binding SearchCommand}" />
        <Button Text="Limpiar" Command="{Binding ClearCommand}" />

        <Label Text="Resultado:"
               FontAttributes="Bold"
               IsVisible="{Binding FoundAirport, Converter={StaticResource NullToVisibilityConverter}}" />
        <Label Text="{Binding FoundAirport.Nombre}" />
        <Label Text="{Binding FoundAirport.Pais}" />
        <Label Text="{Binding FoundAirport.Latitud}" />
        <Label Text="{Binding FoundAirport.Longitud}" />
        <Label Text="{Binding FoundAirport.Email}" />

        <Label Text="{Binding ErrorMessage}"
               TextColor="Red"
               FontAttributes="Bold" />
    </VerticalStackLayout>
</ContentPage>

